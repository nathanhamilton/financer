.form
  %ul
    = form_for [@envelope, @transaction] do |f|
      %li
        = f.label :name
        = f.text_field :name
      %li
        = f.label :transaction_type
        = f.text_field :transaction_type
      %li
        = f.label :date
        = f.date_select :date, order: [:month, :day, :year], default: Time.zone.now.to_date
        %li
        = f.label :amount
        = f.number_field :amount, step: 0.02
      %li
        = f.submit
