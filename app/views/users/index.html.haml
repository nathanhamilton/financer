- provide(:title, "Users")
%h1 Users
.users
  %ol
    - @users.each do |user|
      %li
        Name:
        = user.name
      %li
        Email:
        = user.email
      %li
        Total Envelopes
        = user.envelopes.count
      %li
        Total Banks
        = user.banks.count
      %li
        Total Transactions
        = user.transactions.count
      %br/
